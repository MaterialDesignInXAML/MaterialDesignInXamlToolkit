                    <TabControl Width="300" materialDesign:ColorZoneAssist.Mode="SecondaryLight">
                        <TabItem Header="TAB 1">
                            <TextBlock Margin="8" Text="SecondaryLight Tab 1" />
                        </TabItem>
                        <TabItem Header="TAB 2">
                            <TextBlock Margin="8" Text="SecondaryLight Tab 2" />
