                        </TabItem>
                        <TabItem Header="TAB 2">
                            <TextBlock Margin="8" Text="SecondaryDark Tab 2" />
                        </TabItem>
                    </TabControl>
                </materialDesign:Card>
            </smtx:XamlDisplay>
        </WrapPanel>

