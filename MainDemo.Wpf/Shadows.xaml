                    materialDesign:ShadowAssist.ShadowDepth="Depth5"
                    Content="DEPTH 5"/>
            </smtx:XamlDisplay>
        </StackPanel>
        
        <StackPanel
            Orientation="Horizontal"
            Margin="0 32 0 0">
            <smtx:XamlDisplay UniqueKey="shadow_9">
