          </smtx:XamlDisplay>
          <smtx:XamlDisplay Grid.Column="4" UniqueKey="passwordbox_filled_stretch">
            <PasswordBox HorizontalContentAlignment="Stretch" />
          </smtx:XamlDisplay>
        </Grid>
        <Grid>
