        <materialDesign:DialogHost Margin="15" 
                                   Grid.Row="1" 
                                   Grid.ColumnSpan="2" 
                                   x:Name="NewProjectDialog"
                                   DialogClosing="NewProjectDialog_DialogClosing">
            <materialDesign:DialogHost.DialogContent>
                <Grid Margin="10" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Base Theme:" Margin="3" />
                    <StackPanel Grid.Row="1" Margin="10,3">
                        <RadioButton IsChecked="True" Content="Light" Style="{StaticResource MaterialDesignAccentRadioButton}" />
                        <RadioButton x:Name="newdarkbased" Content="Dark" Style="{StaticResource MaterialDesignAccentRadioButton}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" >
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                IsDefault="True"
                                Margin="0 8 8 0"
                                Command="materialDesign:DialogHost.CloseDialogCommand"
                                CommandParameter="true">
                            ACCEPT
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                IsCancel="True"
                                Margin="0 8 8 0"
                                Command="materialDesign:DialogHost.CloseDialogCommand">
                            CANCEL
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>

        <materialDesign:DialogHost Margin="15" 
                                   Grid.Row="1" 
                                   Grid.ColumnSpan="2" 
                                   x:Name="CommonDialog">
            <materialDesign:DialogHost.DialogContent>
                <Grid Margin="10" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="commonDialogMessage" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" >
