                                        <DatePicker Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Grid.Row="2" materialDesign:HintAssist.Hint="Date Selector" Margin="3" />
                                    </Grid>
                                </GroupBox>
                                <GroupBox Header="Buttons" 
                                      Margin="10"
                                      Grid.Row="1"
                                      materialDesign:ColorZoneAssist.Mode="Standard"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                      Style="{StaticResource MaterialDesignCardGroupBox}">
                                    <UniformGrid Columns="3" HorizontalAlignment="Stretch" >
                                        <Button Style="{StaticResource MaterialDesignFlatButton}" Margin="5">FLAT</Button>
                                        <Button Style="{StaticResource MaterialDesignFlatAccentButton}" Margin="5">Flat AC</Button>
                                        <Button Style="{StaticResource MaterialDesignFlatAccentBgButton}" Margin="5">Flat AC BG</Button>
                                        <Button Style="{StaticResource MaterialDesignFlatLightBgButton }" Margin="5">Flat PR</Button>
                                        <Button Style="{StaticResource MaterialDesignFlatMidBgButton }" Margin="5">Flat PR</Button>
                                        <Button Style="{StaticResource MaterialDesignFlatDarkBgButton }" Margin="5">Flat PR</Button>
                                        <Button Style="{StaticResource MaterialDesignFloatingActionButton}" Margin="5">Act</Button>
                                        <Button Style="{StaticResource MaterialDesignFloatingActionAccentButton}" Margin="5">Act Ac</Button>
                                        <Button Style="{StaticResource MaterialDesignIconButton}" Margin="5">
                                            <materialDesign:PackIcon Kind="Emoticon" />
                                        </Button>
                                    </UniformGrid>
                                </GroupBox>
                                <GroupBox Header="Toggles" 
                                      Margin="10"
                                      Grid.Column="1"
                                      materialDesign:ColorZoneAssist.Mode="Standard"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                      Style="{StaticResource MaterialDesignCardGroupBox}">
                                    <UniformGrid Columns="5" >
                                        <CheckBox Style="{StaticResource MaterialDesignLightCheckBox}" IsChecked="True" HorizontalAlignment="Center" />
                                        <CheckBox Style="{StaticResource MaterialDesignCheckBox}" IsChecked="True" HorizontalAlignment="Center" />
                                        <CheckBox Style="{StaticResource MaterialDesignDarkCheckBox}" IsChecked="True" HorizontalAlignment="Center" />
                                        <CheckBox Style="{StaticResource MaterialDesignAccentCheckBox}" IsChecked="True" HorizontalAlignment="Center" />
                                        <CheckBox Style="{StaticResource MaterialDesignCheckBox}" IsChecked="True" IsEnabled="False" HorizontalAlignment="Center" />
                                        <RadioButton Style="{StaticResource MaterialDesignDarkRadioButton}" IsChecked="True" HorizontalAlignment="Center" />
                                        <RadioButton Style="{StaticResource MaterialDesignRadioButton}" IsChecked="True" HorizontalAlignment="Center" />
                                        <RadioButton Style="{StaticResource MaterialDesignLightRadioButton}" IsChecked="True" HorizontalAlignment="Center" />
                                        <RadioButton Style="{StaticResource MaterialDesignAccentRadioButton}" IsChecked="True" GroupName="accent" HorizontalAlignment="Center" />
                                        <RadioButton Style="{StaticResource MaterialDesignRadioButton}" IsChecked="True" IsEnabled="False" GroupName="disabled" HorizontalAlignment="Center" />
                                        <ToggleButton Style="{StaticResource MaterialDesignSwitchDarkToggleButton}" IsChecked="True" HorizontalAlignment="Center" />
                                        <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}" IsChecked="True" HorizontalAlignment="Center" />
                                        <ToggleButton Style="{StaticResource MaterialDesignSwitchLightToggleButton}" IsChecked="True" HorizontalAlignment="Center" />
                                        <ToggleButton Style="{StaticResource MaterialDesignSwitchAccentToggleButton}" IsChecked="True" HorizontalAlignment="Center" />
                                        <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}" IsChecked="True" IsEnabled="False" HorizontalAlignment="Center" />
                                    </UniformGrid>
                                </GroupBox>
                                <GroupBox Header="DataGrid" 
                                      Margin="10"
                                      Grid.Column="1"
                                      Grid.Row="1"
                                      materialDesign:ColorZoneAssist.Mode="Standard"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                      Style="{StaticResource MaterialDesignCardGroupBox}">
                                    <DataGrid IsReadOnly="True">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Binding="{Binding}" Header="Column Header:" />
                                        </DataGrid.Columns>
                                        <DataGrid.Items>
                                            <sys:String>Row1</sys:String>
                                            <sys:String>Row2</sys:String>
                                            <sys:String>Row3</sys:String>
                                            <sys:String>Row4</sys:String>
                                            <sys:String>Row5</sys:String>
                                        </DataGrid.Items>
                                    </DataGrid>
                                </GroupBox>
