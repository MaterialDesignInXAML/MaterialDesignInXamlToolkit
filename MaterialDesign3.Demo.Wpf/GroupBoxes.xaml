<UserControl x:Class="MaterialDesign3Demo.GroupBoxes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">

  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.GroupBox.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>
    <smtx:XamlDisplay Grid.Row="0"
                      Grid.Column="0"
                      UniqueKey="groupbox_1">
      <GroupBox Margin="16" Header="Default Look">
        <TextBlock Text="My Content" />
      </GroupBox>
    </smtx:XamlDisplay>

    <smtx:XamlDisplay Grid.Row="0"
                      Grid.Column="1"
                      UniqueKey="groupbox_2">
      <GroupBox Margin="16"
                materialDesign:ElevationAssist.Elevation="Dp8"
                BorderThickness="0"
                Header="Shadow Header"
                Style="{StaticResource MaterialDesignGroupBox}">
        <TextBlock Margin="6,6,6,6"
                   Text="Short loin picanha boudin pork belly. Ground round porchetta biltong, cow t-bone tri-tip strip steak chuck filet mignon jowl turducken. Landjaeger strip steak pork chop, jowl sirloin pork capicola andouille. Kevin ribeye tongue, drumstick hamburger frankfurter t-bone corned beef beef biltong cow venison. Biltong picanha bresaola pork belly, filet mignon spare ribs doner pork chop kielbasa. Swine flank drumstick pork belly pancetta spare ribs rump filet mignon."
                   TextWrapping="Wrap" />
      </GroupBox>
    </smtx:XamlDisplay>

    <smtx:XamlDisplay Grid.Row="0"
                      Grid.Column="2"
                      UniqueKey="groupbox_3">
      <Border Background="{DynamicResource MaterialDesignBackground}">
        <GroupBox Margin="16"
                  Header="Transparent Background"
                  Style="{StaticResource MaterialDesignGroupBox}"
                  UseLayoutRounding="True">
          <TextBlock Text="My Content" />
        </GroupBox>
      </Border>
    </smtx:XamlDisplay>
    <smtx:XamlDisplay Grid.Row="1"
                      Grid.Column="0"
                      UniqueKey="groupbox_4">
      <GroupBox Margin="16"
                materialDesign:ColorZoneAssist.Mode="SecondaryMid"
                Header="Accent Header"
                Style="{StaticResource MaterialDesignGroupBox}">
        <TextBlock Text="My Content" />
      </GroupBox>
    </smtx:XamlDisplay>

    <smtx:XamlDisplay Grid.Row="1"
                      Grid.Column="1"
                      UniqueKey="groupbox_5">
      <GroupBox Margin="16"
                materialDesign:ColorZoneAssist.Background="Black"
                materialDesign:ColorZoneAssist.Foreground="White"
                materialDesign:ColorZoneAssist.Mode="Custom"
                Header="Custom Header"
                Style="{StaticResource MaterialDesignGroupBox}">
        <TextBlock Text="My Content" />
      </GroupBox>
    </smtx:XamlDisplay>

    <smtx:XamlDisplay Grid.Row="2"
                      Grid.Column="0"
                      UniqueKey="groupbox_6">
      <GroupBox Margin="16"
                Header="Card Group Box"
                Style="{StaticResource MaterialDesignCardGroupBox}">
        <GroupBox.HeaderTemplate>
          <DataTemplate>
            <StackPanel Orientation="Horizontal">
              <materialDesign:PackIcon Width="32"
                                       Height="32"
                                       VerticalAlignment="Center"
                                       Kind="ImageArea" />

              <TextBlock Margin="8,0,0,0"
                         VerticalAlignment="Center"
                         Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                         Text="{Binding}" />
            </StackPanel>
          </DataTemplate>
        </GroupBox.HeaderTemplate>

        <Image HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="Resources/Contact.png" />
      </GroupBox>
    </smtx:XamlDisplay>

    <smtx:XamlDisplay Grid.Row="2"
                      Grid.Column="1"
                      UniqueKey="groupbox_7">
      <GroupBox Margin="16"
                materialDesign:ColorZoneAssist.Mode="SecondaryMid"
                Header="Card Group Box Accent"
                Style="{StaticResource MaterialDesignCardGroupBox}">
        <GroupBox.HeaderTemplate>
          <DataTemplate>
            <StackPanel Orientation="Horizontal">
              <materialDesign:PackIcon Width="32"
                                       Height="32"
                                       VerticalAlignment="Center"
                                       Kind="ImageArea" />

              <TextBlock Margin="8,0,0,0"
                         VerticalAlignment="Center"
                         Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                         Text="{Binding}" />
            </StackPanel>
          </DataTemplate>
        </GroupBox.HeaderTemplate>

        <Image HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="Resources/Contact.png" />
      </GroupBox>
    </smtx:XamlDisplay>

    <smtx:XamlDisplay Grid.Row="2"
                      Grid.Column="2"
                      UniqueKey="groupbox_8">
      <GroupBox Margin="16"
                materialDesign:ColorZoneAssist.Background="Black"
                materialDesign:ColorZoneAssist.Foreground="White"
                materialDesign:ColorZoneAssist.Mode="Custom"
                Header="Card Group Box Custom"
                Style="{StaticResource MaterialDesignCardGroupBox}">
        <GroupBox.HeaderTemplate>
          <DataTemplate>
            <StackPanel Orientation="Horizontal">
              <materialDesign:PackIcon Width="32"
                                       Height="32"
                                       VerticalAlignment="Center"
                                       Kind="ImageArea" />

              <TextBlock Margin="8,0,0,0"
                         VerticalAlignment="Center"
                         Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                         Text="{Binding}" />
            </StackPanel>
          </DataTemplate>
        </GroupBox.HeaderTemplate>

        <Image HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="Resources/Contact.png" />
      </GroupBox>
    </smtx:XamlDisplay>
  </Grid>
</UserControl>



