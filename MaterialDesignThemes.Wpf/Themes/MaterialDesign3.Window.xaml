<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf">
    <Style
        TargetType="Window"
        x:Key="MaterialDesignWindow">
        <Setter
            Property="Background"
            Value="{DynamicResource MaterialDesignPaper}" />
        <Setter
            Property="TextElement.Foreground"
            Value="{DynamicResource MaterialDesignBody}" />
        <Setter
            Property="TextElement.FontWeight"
            Value="Regular" />
        <Setter
            Property="TextElement.FontSize"
            Value="14" />
        <Setter
            Property="TextOptions.TextFormattingMode"
            Value="Ideal" />
        <Setter
            Property="TextOptions.TextRenderingMode"
            Value="Auto" />
        <Setter
            Property="FontFamily"
            Value="{wpf:NotoFont}" />
    </Style>
</ResourceDictionary>