<Window x:Class="MaterialDesignThemes.Wpf.ThemeCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewemodel="clr-namespace:MaterialDesignThemes.Wpf.ThemeCreator.ViewModel"
        xmlns:model="clr-namespace:MaterialDesignThemes.Wpf.ThemeCreator.Model"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{materialDesign:MaterialDesignFont}" 
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MaterialDesignInXAML Theme Creator" 
        Height="740" Width="1000" 
        Icon="/View/favicon.ico">
    <Window.Resources>
        <viewemodel:EditorViewModel x:Key="VM" PropertyChanged="EditorViewModel_PropertyChanged" />
    </Window.Resources>
    <Grid DataContext="{StaticResource VM}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <materialDesign:ColorZone Padding="16" 
                                  materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                  Mode="PrimaryMid" 
                                  DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal">
                <Button ToolTip="New Theme Project" 
                        ToolTipService.InitialShowDelay="0"
                        Style="{DynamicResource MaterialDesignFlatButton}"
                        Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                        Click="NewProject_Button_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileEditOutline" VerticalAlignment="Center" />
                        <TextBlock Margin="8 0 0 0" Style="{StaticResource MaterialDesignBody1TextBlock}"
                                   Text="New" />
                    </StackPanel>
                </Button>
                <Button ToolTip="Open Theme Project" 
                            ToolTipService.InitialShowDelay="0"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                            Click="OpenProject_Button_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileSearchOutline" VerticalAlignment="Center" />
                        <TextBlock Margin="8 0 0 0" Style="{StaticResource MaterialDesignBody1TextBlock}"
                                   Text="Open" />
                    </StackPanel>
                </Button>
                <Button ToolTip="Save Current Project" 
                            ToolTipService.InitialShowDelay="0"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                            Click="SaveProject_Button_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSaveOutline"  VerticalAlignment="Center" />
                        <TextBlock Margin="8 0 0 0" Style="{StaticResource MaterialDesignBody1TextBlock}"
                                   Text="Save" />
                    </StackPanel>
                </Button>
                <Button ToolTip="Save Current Project As" 
                            ToolTipService.InitialShowDelay="0"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                            Click="SaveProjectAs_Button_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSaveSettingsOutline"  VerticalAlignment="Center" />
                        <TextBlock Margin="8 0 0 0" Style="{StaticResource MaterialDesignBody1TextBlock}"
                                   Text="Save As" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </materialDesign:ColorZone>

        <materialDesign:DialogHost x:Name="coloreditordialoghost" 
                                   Grid.Row="1" 
                                   Grid.ColumnSpan="2" 
                                   DialogClosing="AcceptColor">
            <materialDesign:DialogHost.DialogContent>
                <Grid Margin="0,0,0,10" x:Name="coloreditordialog" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <materialDesign:ColorPicker x:Name="cpicker" Width="200" Height="200" />
                    <TextBox Style="{DynamicResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Hex" Text="{Binding ElementName=cpicker, Path=Color, Mode=TwoWay}" Grid.Row="1" Margin="10,0" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" >
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                IsDefault="True"
                                Margin="0 8 8 0"
                                Command="materialDesign:DialogHost.CloseDialogCommand"
                                x:Name="coloreditordialogacceptbutton">
                            <!--<Button.CommandParameter>
                                <system:Boolean>True</system:Boolean>
                            </Button.CommandParameter>-->
                            ACCEPT
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                IsCancel="True"
                                Margin="0 8 8 0"
                                Command="materialDesign:DialogHost.CloseDialogCommand">
                            <!--<Button.CommandParameter>
                                <system:Boolean>False</system:Boolean>
                            </Button.CommandParameter>-->
                            CANCEL
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:DialogHost.DialogContent>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <GroupBox Header="Colors:" Margin="15,15,0,15"  Grid.Row="1"
                          materialDesign:ColorZoneAssist.Mode="Standard"
                          Style="{StaticResource MaterialDesignCardGroupBox}"
                          materialDesign:ShadowAssist.ShadowDepth="Depth0" Grid.RowSpan="2">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Brushes}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type model:BrushColor}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" MaxWidth="200"/>
                                            <ColumnDefinition Width="98"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name, StringFormat={}{0}:}" Margin="3" VerticalAlignment="Center" 
                                                   TextAlignment="Right"/>
                                        <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                                Grid.Column="1" Margin="3" BorderThickness="2" 
                                                BorderBrush="{DynamicResource MaterialDesignDarkSeparatorBackground}" 
                                                Cursor="Hand" 
                                                Click="EditColorButton_Click" Tag="Primary">
                                            <Button.Background>
                                                <DrawingBrush TileMode="Tile" Viewport="0,0,20,21"
                                                              ViewportUnits="Absolute" Stretch="Fill" 
                                                              ViewboxUnits="RelativeToBoundingBox">
                                                    <DrawingBrush.Drawing>
                                                        <DrawingGroup>
                                                            <GeometryDrawing Brush="#FFE2E2E2" Geometry="M0,0 L0,5 0,10 0,5, 10,5 10,10 5,10 5,0 Z"/>
                                                            <GeometryDrawing>
                                                                <GeometryDrawing.Brush>
                                                                    <SolidColorBrush Color="{Binding Color}" />
                                                                </GeometryDrawing.Brush>
                                                                <GeometryDrawing.Geometry>
                                                                    <RectangleGeometry Rect="0 0 10 10" />
                                                                </GeometryDrawing.Geometry>
                                                            </GeometryDrawing>
                                                        </DrawingGroup>
                                                    </DrawingBrush.Drawing>
                                                </DrawingBrush>
                                            </Button.Background>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>

                <GroupBox Header="Preview:" 
                          Margin="15"  
                          Grid.Column="1"  
                          Grid.Row="1"
                          x:Name="previewbox"
                          materialDesign:ColorZoneAssist.Mode="Standard"
                          Style="{StaticResource MaterialDesignCardGroupBox}"
                          materialDesign:ShadowAssist.ShadowDepth="Depth0" Grid.RowSpan="2">
                    <!--<materialDesign:ColorPicker/>-->
                    <Grid x:Name="samplegrid" 
                          Background="{DynamicResource MaterialDesignPaper}"        
                          TextElement.Foreground="{DynamicResource MaterialDesignBody}"
                          TextBlock.Foreground="{DynamicResource MaterialDesignBody}">
                        <Grid.Resources>
                            <ResourceDictionary>
                                <ResourceDictionary.MergedDictionaries>
                                    <materialDesign:CustomColorTheme BaseTheme="Light" PrimaryColor="Purple" SecondaryColor="Lime"  />
                                    <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                                    <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml" />
                                </ResourceDictionary.MergedDictionaries>
                            </ResourceDictionary>
                        </Grid.Resources>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <materialDesign:ColorZone Padding="16" 
                                                  materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                                  Mode="PrimaryMid">

                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <ToggleButton Style="{StaticResource MaterialDesignHamburgerToggleButton}"
                                              IsChecked="False"/>
                                    <TextBlock Text="App Title Area" 
                                               VerticalAlignment="Center" 
                                               Margin="10,0,0,0"
                                               Style="{DynamicResource  MaterialDesignHeadline6TextBlock }" />
                                </StackPanel>

                                <Button ToolTip="Command 1" 
                                        ToolTipService.InitialShowDelay="0"
                                        HorizontalAlignment="Right"
                                        Style="{DynamicResource MaterialDesignFlatButton}"
                                        Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}" >
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="MicrosoftXboxController" VerticalAlignment="Center" />
                                        <TextBlock Margin="8 0 0 0" Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                   Text="Command 1" />
                                    </StackPanel>
                                </Button>

                            </Grid>



                        </materialDesign:ColorZone>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="245*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="290"/>
                            </Grid.ColumnDefinitions>
                            <GroupBox Header="Form" 
                                      Margin="10"
                                      materialDesign:ColorZoneAssist.Mode="Standard"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                      Style="{DynamicResource MaterialDesignCardGroupBox}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBox Style="{DynamicResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Text Field" Margin="3" />
                                    <ComboBox Style="{DynamicResource MaterialDesignFloatingHintComboBox}" Grid.Row="1" materialDesign:HintAssist.Hint="Selector Field" Margin="3">
                                        opt01
                                    </ComboBox>
                                    <DatePicker Style="{DynamicResource MaterialDesignFloatingHintDatePicker}" Grid.Row="2" materialDesign:HintAssist.Hint="Date Selector" />
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Buttons" 
                                      Margin="10"
                                      Grid.Row="1"
                                      materialDesign:ColorZoneAssist.Mode="Standard"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                      VerticalAlignment="Top"
                                      Style="{DynamicResource MaterialDesignCardGroupBox}">
                                <UniformGrid Columns="3" >
                                    <Button Style="{DynamicResource MaterialDesignFlatButton}" Margin="5">Flat</Button>
                                    <Button Style="{DynamicResource MaterialDesignFlatAccentButton}" Margin="5">Flat AC</Button>
                                    <Button Style="{DynamicResource MaterialDesignFlatAccentBgButton}" Margin="5">Flat AC BG</Button>
                                    <Button Style="{DynamicResource MaterialDesignFlatLightBgButton }" Margin="5">Flat PR</Button>
                                    <Button Style="{DynamicResource MaterialDesignFlatMidBgButton }" Margin="5">Flat PR</Button>
                                    <Button Style="{DynamicResource MaterialDesignFlatDarkBgButton }" Margin="5">Flat PR</Button>
                                    <Button Style="{DynamicResource MaterialDesignFloatingActionButton}" Margin="5">Act</Button>
                                    <Button Style="{DynamicResource MaterialDesignFloatingActionAccentButton}" Margin="5">Act Ac</Button>
                                    <Button Style="{DynamicResource MaterialDesignIconButton}" Margin="5">
                                        <materialDesign:PackIcon Kind="Emoticon" />
                                    </Button>
                                </UniformGrid>
                            </GroupBox>

                            <GroupBox Header="Toggles" 
                                      Margin="10"
                                      Grid.Column="1"
                                      materialDesign:ColorZoneAssist.Mode="Standard"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                      Style="{DynamicResource MaterialDesignCardGroupBox}">
                                <UniformGrid Columns="5" >
                                    <CheckBox Style="{DynamicResource MaterialDesignLightCheckBox}" IsChecked="True" HorizontalAlignment="Center" />
                                    <CheckBox Style="{DynamicResource MaterialDesignCheckBox}" IsChecked="True" HorizontalAlignment="Center" />
                                    <CheckBox Style="{DynamicResource MaterialDesignDarkCheckBox}" IsChecked="True" HorizontalAlignment="Center" />
                                    <CheckBox Style="{DynamicResource MaterialDesignAccentCheckBox}" IsChecked="True" HorizontalAlignment="Center" />
                                    <CheckBox Style="{DynamicResource MaterialDesignCheckBox}" IsChecked="True" IsEnabled="False" HorizontalAlignment="Center" />
                                    <RadioButton Style="{DynamicResource MaterialDesignDarkRadioButton}" IsChecked="True" HorizontalAlignment="Center" />
                                    <RadioButton Style="{DynamicResource MaterialDesignRadioButton}" IsChecked="True" HorizontalAlignment="Center" />
                                    <RadioButton Style="{DynamicResource MaterialDesignLightRadioButton}" IsChecked="True" HorizontalAlignment="Center" />
                                    <RadioButton Style="{DynamicResource MaterialDesignAccentRadioButton}" IsChecked="True" GroupName="accent" HorizontalAlignment="Center" />
                                    <RadioButton Style="{DynamicResource MaterialDesignRadioButton}" IsChecked="True" IsEnabled="False" GroupName="disabled" HorizontalAlignment="Center" />
                                    <ToggleButton Style="{DynamicResource MaterialDesignSwitchDarkToggleButton}" IsChecked="True" HorizontalAlignment="Center" />
                                    <ToggleButton Style="{DynamicResource MaterialDesignSwitchToggleButton}" IsChecked="True" HorizontalAlignment="Center" />
                                    <ToggleButton Style="{DynamicResource MaterialDesignSwitchLightToggleButton}" IsChecked="True" HorizontalAlignment="Center" />
                                    <ToggleButton Style="{DynamicResource MaterialDesignSwitchAccentToggleButton}" IsChecked="True" HorizontalAlignment="Center" />
                                    <ToggleButton Style="{DynamicResource MaterialDesignSwitchToggleButton}" IsChecked="True" IsEnabled="False" HorizontalAlignment="Center" />
                                </UniformGrid>
                            </GroupBox>

                        </Grid>
                        <materialDesign:PopupBox Style="{DynamicResource MaterialDesignMultiFloatingActionAccentPopupBox }" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Grid.Row="1"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </materialDesign:DialogHost>

        <materialDesign:DialogHost Margin="15" 
                                   Grid.Row="1" 
                                   Grid.ColumnSpan="2" 
                                   x:Name="NewProjectDialog"
                                   DialogClosing="NewProjectDialog_DialogClosing">
            <materialDesign:DialogHost.DialogContent>
                <Grid Margin="10" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Base Theme:" Margin="3" />
                    <StackPanel Grid.Row="1" Margin="10,3">
                        <RadioButton IsChecked="True" Content="Light" Style="{DynamicResource MaterialDesignAccentRadioButton}" />
                        <RadioButton x:Name="newdarkbased" Content="Dark" Style="{DynamicResource MaterialDesignAccentRadioButton}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" >
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                IsDefault="True"
                                Margin="0 8 8 0"
                                Command="materialDesign:DialogHost.CloseDialogCommand"
                                CommandParameter="true">
                            ACCEPT
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                IsCancel="True"
                                Margin="0 8 8 0"
                                Command="materialDesign:DialogHost.CloseDialogCommand">
                            CANCEL
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>

        <materialDesign:DialogHost Margin="15" 
                                   Grid.Row="1" 
                                   Grid.ColumnSpan="2" 
                                   x:Name="CommonDialog">
            <materialDesign:DialogHost.DialogContent>
                <Grid Margin="10" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="commonDialogMessage" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" >
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                IsDefault="True"
                                Margin="0 8 8 0"
                                Command="materialDesign:DialogHost.CloseDialogCommand"
                                CommandParameter="true">
                            OK
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>

    </Grid>
</Window>
