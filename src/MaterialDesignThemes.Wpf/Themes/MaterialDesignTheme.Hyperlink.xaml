<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- updated specification 2018 -->
  <Style x:Key="MaterialDesignBody1Hyperlink" TargetType="{x:Type Hyperlink}">
    <Setter Property="FontSize" Value="16" />
    <Setter Property="FontWeight" Value="Regular" />
    <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.Foreground}" />
    <Setter Property="TextDecorations" Value="None" />
    <Style.Triggers>
      <Trigger Property="IsEnabled" Value="False">
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.CheckBox.Disabled}" />
      </Trigger>
      <Trigger Property="IsEnabled" Value="True">
        <Setter Property="Cursor" Value="Hand" />
      </Trigger>
      <MultiTrigger>
        <MultiTrigger.Conditions>
          <Condition Property="IsEnabled" Value="True" />
          <Condition Property="IsMouseOver" Value="True" />
        </MultiTrigger.Conditions>
        <Setter Property="TextDecorations" Value="Underline" />
      </MultiTrigger>
    </Style.Triggers>
  </Style>

  <Style x:Key="MaterialDesignBody2Hyperlink"
         TargetType="{x:Type Hyperlink}"
         BasedOn="{StaticResource MaterialDesignBody1Hyperlink}">
    <Setter Property="FontSize" Value="14" />
  </Style>

  <Style x:Key="MaterialDesignCaptionHyperlink"
         TargetType="{x:Type Hyperlink}"
         BasedOn="{StaticResource MaterialDesignBody1Hyperlink}">
    <Setter Property="FontSize" Value="12" />
  </Style>

  <Style x:Key="MaterialDesignOverlineHyperlink"
         TargetType="{x:Type Hyperlink}"
         BasedOn="{StaticResource MaterialDesignBody1Hyperlink}">
    <Setter Property="FontSize" Value="10" />
  </Style>

  <Style x:Key="MaterialDesignSubtitle1Hyperlink"
         TargetType="{x:Type Hyperlink}"
         BasedOn="{StaticResource MaterialDesignBody1Hyperlink}">
    <Setter Property="FontSize" Value="16" />
  </Style>

  <Style x:Key="MaterialDesignSubtitle2Hyperlink"
         TargetType="{x:Type Hyperlink}"
         BasedOn="{StaticResource MaterialDesignBody1Hyperlink}">
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontWeight" Value="Medium" />
  </Style>

  <Style x:Key="MaterialDesignHeadline6Hyperlink"
         TargetType="{x:Type Hyperlink}"
         BasedOn="{StaticResource MaterialDesignBody1Hyperlink}">
    <Setter Property="FontSize" Value="20" />
    <Setter Property="FontWeight" Value="Medium" />
  </Style>

  <Style x:Key="MaterialDesignHeadline5Hyperlink"
         TargetType="{x:Type Hyperlink}"
         BasedOn="{StaticResource MaterialDesignBody1Hyperlink}">
    <Setter Property="FontSize" Value="24" />
  </Style>

  <Style x:Key="MaterialDesignHeadline4Hyperlink"
         TargetType="{x:Type Hyperlink}"
         BasedOn="{StaticResource MaterialDesignBody1Hyperlink}">
    <Setter Property="FontSize" Value="34" />
  </Style>

  <Style x:Key="MaterialDesignHeadline3Hyperlink"
         TargetType="{x:Type Hyperlink}"
         BasedOn="{StaticResource MaterialDesignBody1Hyperlink}">
    <Setter Property="FontSize" Value="48" />
  </Style>

  <Style x:Key="MaterialDesignHeadline2Hyperlink"
         TargetType="{x:Type Hyperlink}"
         BasedOn="{StaticResource MaterialDesignBody1Hyperlink}">
    <Setter Property="FontSize" Value="60" />
    <Setter Property="FontWeight" Value="Light" />
  </Style>

  <Style x:Key="MaterialDesignHeadline1Hyperlink"
         TargetType="{x:Type Hyperlink}"
         BasedOn="{StaticResource MaterialDesignBody1Hyperlink}">
    <Setter Property="FontSize" Value="96" />
    <Setter Property="FontWeight" Value="Light" />
  </Style>

</ResourceDictionary>
